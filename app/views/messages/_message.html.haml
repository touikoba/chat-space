-# .message-list__contents
-#   %ul.message-list__contents__info
-#     %li.message-list__contents__info-name
-#       = message.user.name
-#     %li.message-list__contents__info-date
-#       = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
-#   %ul.message-list__contents__info-comments
-#     - if message.content.present?
-#       %li.message-list__contents__info-comments-comment
-#         = message.content
-#     = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
%ul.message-list__info
  %li.message-list__info-name
    = message.user.name
  %li.message-list__info-date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
%ul.message-list__info-comments
  - if message.content.present?
    %li.message-list__info-comments-comment
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?